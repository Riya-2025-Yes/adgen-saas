generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      String
  tenantId  String?
  status    String   @default("active")
  createdAt DateTime @default(now())
  
  tenant    Tenant?  @relation(fields: [tenantId], references: [id])
  
  @@index([email])
}

model Tenant {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  createdAt DateTime @default(now())
  
  users     User[]
}
